{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["dom", "es2017"],
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts"]
}